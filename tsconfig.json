{
  "extends": "./.nuxt/tsconfig.json",
  "compilerOptions": {
    "preserveConstEnums": true,
    "types": ["vite/client", "@types/jest"],
    "esModuleInterop": true,
    "sourceMap": true,
    "lib": ["esnext", "dom"]
  },
  "include": ["./**/*.ts", "./**/*.vue"],
  "exclude": [
    "node_modules",
    "**/*.stories.ts", 
    ".storybook/**/*.js",
    ".storybook/**/*.ts",
    "**/*.stories.ts",
    "stories/**/*.js",
    "stories/**/*.ts"
  ]
}
